<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.FollowerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">


        <!-- Get Followers Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_getFollowers"
            style="@style/card_widget_earnFragment"
            app:contentPadding="16dp">

            <LinearLayout style="@style/linear_layout_insideCardWidget_earnFragment">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_add_follower" />

                <TextView
                    style="@style/text_view_insideCardWidget_earnFragment"
                    android:text="Get Followers" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Followers List Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_followersList"
            style="@style/card_widget_earnFragment"
            app:contentPadding="16dp">

            <LinearLayout style="@style/linear_layout_insideCardWidget_earnFragment">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_follower_list" />

                <TextView
                    style="@style/text_view_insideCardWidget_earnFragment"
                    android:text="Followers List" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Native Ad Banner -->
        <com.facebook.ads.NativeAdLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" />


    </LinearLayout>

</ScrollView>
