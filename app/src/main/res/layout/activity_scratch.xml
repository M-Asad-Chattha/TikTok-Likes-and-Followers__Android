<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Activities.Earn.ScratchActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/layout_scratch_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Try Your luck by scratching coupons and win Diamond"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:onClick="onClickScratchingLayout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_scratch_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="onClickScratchingLayout"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_scratch" />


                <ImageView
                    android:id="@+id/image_view_scratch_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="onClickScratchingLayout"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_scratch" />


                <ImageView
                    android:id="@+id/image_view_scratch_3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="onClickScratchingLayout"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_scratch" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:onClick="onClickScratchingLayout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_scratch_4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="onClickScratchingLayout"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_scratch" />


                <ImageView
                    android:id="@+id/image_view_scratch_5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="onClickScratchingLayout"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_scratch" />


                <ImageView
                    android:id="@+id/image_view_scratch_6"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:onClick="onClickScratchingLayout"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_scratch" />

            </LinearLayout>

            <!-- Native Ad Banner -->
            <com.facebook.ads.NativeAdLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="16dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
